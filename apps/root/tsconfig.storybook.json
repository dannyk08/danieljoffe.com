{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/storybook",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve"
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "exclude": [
    "src/**/*.mdx",
    "components/**/*.spec.ts",
    "components/**/*.test.ts"
  ],
  "include": [
    "components/**/*.stories.ts",
    "components/**/*.stories.js",
    "components/**/*.stories.jsx",
    "components/**/*.stories.tsx",
    "components/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts"
  ]
}
